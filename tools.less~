.enc-media-width(@property,
@240: 0, @320: 0, @360: 0, @480: 0, @533: 0, @568: 0,
@600: 0, @640: 0, @768: 0, @800: 0, @853: 0, @966: 0, 
@1024: 0, @1280: 0, @1366: 0, @1400: 0, @1680: 0, @1920: 0)
{
@media (min-width:@enc-media-width-240){@{property}: @240;}
@media (min-width:@enc-media-width-320){@{property}: @320;}
@media (min-width:@enc-media-width-360){@{property}: @360;}
@media (min-width:@enc-media-width-480){@{property}: @480;}
@media (min-width:@enc-media-width-533){@{property}: @533;}
@media (min-width:@enc-media-width-568){@{property}: @568;}
@media (min-width:@enc-media-width-600){@{property}: @600;}
@media (min-width:@enc-media-width-640){@{property}: @640;}
@media (min-width:@enc-media-width-768){@{property}: @768;}
@media (min-width:@enc-media-width-800){@{property}: @800;}
@media (min-width:@enc-media-width-853){@{property}: @853;}
@media (min-width:@enc-media-width-966){@{property}: @966;}
@media (min-width:@enc-media-width-1024){@{property}: @1024;}
@media (min-width:@enc-media-width-1280){@{property}: @1280;}
@media (min-width:@enc-media-width-1366){@{property}: @1366;}
@media (min-width:@enc-media-width-1400){@{property}: @1400;}
@media (min-width:@enc-media-width-1680){@{property}: @1680;}
@media (min-width:@enc-media-width-1920){@{property}: @1920;}
}

.enc-media-width-height(){
	background: green;
}

// Center-align a block level element

.enc-center-block() {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

// Keep images from scaling beyond the width of their parents.

.enc-img-responsive(@display: block) {
  display: @display;
  width: 100% \9; // Force IE10 and below to size SVG images correctly
  max-width: 100%; // Part 1: Set a maximum relative to the parent
  height: auto; // Part 2: Scale the height according to the width, otherwise you get stretching
}